<div class="row">
    <div class="col-lg-6 col-sm-6">
        <h2>Where are you?</h2>
        <p>Do not waste your time for decisions.</p>
        <p>latitude: {{latitude}}</p>
        <p>longitude: {{longitude}}</p>
        <form role="form" {{action 'submitLocation' location 'false' on='submit'}}>
            <div class="form-group">
                <label {{bindAttr for="view.locationTextField.elementId"}}>Location</label>
                {{view Ember.TextField valueBinding="location" viewName="locationTextField" classNames="form-control" placeholder="Enter a city or zipcode"}}
            </div>
            <a {{action 'detectPosition'}} role="button" class="btn btn-default">use current location</a>
            <button type="button" class="btn btn-default" disabled="disabled">reset</button>
            <button type="submit" class="btn btn-default">submit</button>
        </form>
    </div>
    <div class="col-lg-6 col-sm-6">
        {{render 'restaurant'}}
    </div>
</div>
